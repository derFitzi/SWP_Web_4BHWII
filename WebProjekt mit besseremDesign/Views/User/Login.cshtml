@model WebProjekt.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>
<script>

</script>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<form asp-controller="User" asp-action="Login" method="post">
    <table class="table">
        <thead>
            <tr>
                <td colspan="3">Loginformular</td>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Email *</td>
                <td>
                    <input type="email" asp-for="Email" />
                </td>
                <td>
                    <span asp-validation-for="Email"></span>
                </td>
            </tr>
            <tr>
                <td>Passwort *</td>
                <td>
                    <input type="password" asp-for="Password" />
                </td>
                <td>
                    <span asp-validation-for="Password"></span>
                </td>
            </tr>
            <tr>
                <td colspan="3"><button type="submit">Submit</button></td>
            </tr>
        </tbody>
        <tfoot>
        <td colspan="3">* sind Pflichtfelder</td>
        </tfoot>
    </table>
</form>
<form asp-controller="User" asp-action="Logout" method="post">
               <button type="submit">Ausloggen</button>
</form>